<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dodo.wbbshoutbox.codebot"
    android:versionCode="5"
    android:versionName="1.1.3" >

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />! -->

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:configChanges="orientation|screenSize|keyboardHidden"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dodo.wbbshoutbox.codebot.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dodo.wbbshoutbox.codebot.Login"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" >
        </activity>
        <activity
            android:name="com.dodo.wbbshoutbox.codebot.Copyright"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog" >
        </activity>
        <activity
            android:name="com.dodo.wbbshoutbox.codebot.Settings"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.dodo.wbbshoutbox.codebot.Settings2"
            android:label=""
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>